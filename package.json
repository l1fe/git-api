{
  "name": "git-api",
  "version": "1.0.0",
  "main": "src/index.js",
  "repository": "git@github.com:l1fe/git-api.git",
  "author": "Igor Naumov <igor.naumov.17@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "npx nodemon --exec \"NODE_ENV=development API_PORT=3000 npx babel-node src\"",
    "start": "npm run dev",
    "eslint": "npx eslint src",
    "lint": "npm run eslint",
    "test": "npx mocha --require babel-register --exit src/**/*.spec.js"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.6",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-import": "^2.14.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.3",
    "pre-git": "^3.17.1",
    "proxyquire": "^2.0.1",
    "sinon": "^6.1.5",
    "supertest": "^3.1.0"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-validation": "^1.0.2",
    "http-status": "^1.2.0",
    "joi": "^13.6.0",
    "node-fetch": "^2.2.0",
    "shortid": "^2.2.12"
  },
  "config": {
    "pre-git": {
      "pre-commit": [
        "npm run lint",
        "npm run test"
      ]
    }
  },
  "release": {
    "analyzeCommits": "simple-commit-message"
  }
}
